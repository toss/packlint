{
  "name": "packlint",
  "version": "0.2.4",
  "keywords": [
    "cli",
    "monorepo",
    "multi-package",
    "npm",
    "package",
    "package-json",
    "package.json",
    "packages",
    "workspace",
    "lint",
    "eslint",
    "format",
    "organize"
  ],
  "homepage": "https://github.com/toss/packlint#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toss/packlint.git"
  },
  "type": "module",
  "exports": {
    "./config": {
      "types": "./dist/define-config.d.mts",
      "default": "./dist/define-config.mjs"
    }
  },
  "bin": "./dist/run.mjs",
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "prepack": "yarn build",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@packlint/core": "workspace:^",
    "commander": "^14.0.2",
    "consola": "^3.4.2",
    "picocolors": "^1.1.1",
    "write-pkg": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.2.0",
    "tsdown": "^0.18.2",
    "type-fest": "^5.3.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=22.2.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
