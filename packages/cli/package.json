{
  "name": "packlint",
  "version": "0.2.4",
  "keywords": [
    "cli",
    "monorepo",
    "multi-package",
    "npm",
    "package",
    "package-json",
    "package.json",
    "packages",
    "workspace",
    "lint",
    "eslint",
    "format",
    "organize"
  ],
  "homepage": "https://github.com/toss/packlint#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/toss/packlint.git"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.mjs",
  "bin": "./bin/index.js",
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "prepack": "yarn build",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@packlint/command": "workspace:^",
    "@packlint/core": "workspace:^",
    "clipanion": "^3.2.0-rc.13"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "tsdown": "^0.18.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "publishConfig": {
    "access": "public"
  }
}
