{
  "compilerOptions": {
    /* Modules */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,

    /* Type Checking */
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": true,

    /* Language and Environment */
    "lib": ["ESNext"],
    "target": "ES2022",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Completeness*/
    "allowJs": false,
    "skipLibCheck": true
  },
  "exclude": ["**/dist/*"],
  "include": ["*.config.*", "**/tsdown.config.ts", "packlint.config.cjs"]
}
